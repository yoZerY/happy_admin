    "@prisma/client": "^6.5.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "minio": "^8.0.5",
    "multer": "1.4.5-lts.2",
    "nanoid": "^5.1.5",
    "nestjs-prisma": "^0.25.0",
    "passport": "^0.7.0",
